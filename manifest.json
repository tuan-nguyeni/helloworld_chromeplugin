{
    "manifest_version": 3,
    "name": "Hello World Extension",
    "version": "1.0",
    "description": "A simple Hello World Chrome extension",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }
  